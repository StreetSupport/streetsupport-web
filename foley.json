{
  "paths": {
    "build": "_dist/",
    "buildAssets": "_dist/assets/",
    "svgicon": "_dist",
    "scss": "src/scss/",
    "files": "src/files/",
    "fonts": "src/fonts/",
    "icons": "src/icons/",
    "img": "src/img/",
    "js": "src/js/",
    "data": "src/data/",
    "layouts": "src/layouts",
    "pages": "src/pages",
    "partials": "src/partials",
    "specs": "spec/"
  },
  "autoprefixer": {
    "browsers": ["last 2 versions", "IE >= 10"]
  },
  "metalsmith": {
    "plugins": {
      "metalsmith-drafts": true,
      "metalsmith-markdownit": {
         "typographer": true,
         "html": true
       },
       "metalsmith-permalinks": {
         "pattern": "blog/:title"
       },
      "metalsmith-collections": {
        "posts": {
          "pattern": "blog/!(index).md"
        }
      },
      "metalsmith-discover-helpers": {
        "directory": "./src/helpers",
        "pattern": "/\\.js$/"
      },
      "metalsmith-layouts": {
        "engine": "handlebars",
        "directory": "./src/layouts",
        "partials": "./src/partials"
      },
      "metalsmith-in-place": {
        "engine": "handlebars",
        "pattern": "*.hbs",
        "partials": "./src/partials"
      }
    }
  }
}
